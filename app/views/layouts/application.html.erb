<!DOCTYPE html>
<html lang="ja">
  <%= render partial: "layouts/head" %>

  <body class="bg-white bg-cover bg-fixed dark:bg-dark-card">
    <script>
      document.querySelector('body').style.backgroundImage = `url(${localStorage.wallpaper})`
      if (localStorage.theme === 'dark') {
        document.querySelector('body').classList.add('dark')
      } else {
        document.querySelector('body').classList.remove('dark')
      }
    </script>
    <div id="wallpaper-container" data-turbo-permanent>
      <%= turbo_frame_tag "wallpaper", src: users_wallpaper_path %>
    </div>
    <header id="header" data-turbo-permanent class="w-full top-0 bg-opacity-60 backdrop-blur dark:bg-opacity-60 fixed bg-white dark:bg-dark-background dark:text-gray-200 z-10">
      <div class="flex max-w-3xl mx-auto px-4 items-center py-2 text-sm">
        <%= link_to "/", class: "block mr-3 font-bold", data: { turbo_frame: "_top" } do %>
          timesy.dev
        <% end %>
        <div class="grow"></div>
        <div class="h-[34px] z-[100]" id="header-nav-conteiner" data-turbo-permanent>
          <%= turbo_frame_tag "header_menu", src: users_header_path %>
        </div>
      <div>
    </header>

    <main class="w-full mt-[50px]">
      <%= yield %>
    </main>

    <div id="image-modal" class="modal micromodal-zoom" aria-hidden="true">
      <div class="modal__overlay" tabindex="-1" data-micromodal-close>
        <div role="dialog" aria-modal="true" class="modal__container" >
          <img id="image-modal-image" class="max-w-[900px] w-screen h-screen object-contain" src="" alt="" data-micromodal-close>
        </div>
      </div>
    </div>
  </body>

  <script>window.twttr = (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0],
      t = window.twttr || {};
    if (d.getElementById(id)) return t;
    js = d.createElement(s);
    js.id = id;
    js.src = "https://platform.twitter.com/widgets.js";
    fjs.parentNode.insertBefore(js, fjs);

    t._e = [];
    t.ready = function(f) {
      t._e.push(f);
    };

    return t;
  }(document, "script", "twitter-wjs"));</script> 
</html>
