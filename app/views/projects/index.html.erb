<% set_meta_tags(
  title: I18n.t("pages.projects", user: @user.name),
  og: {
    title: I18n.t("pages.projects", user: @user.name),
  }
) %>

<%= turbo_frame_tag "timeline" do %>
<div class="mx-auto max-w-2xl w-full px-4">
  <%= render partial: 'shared/profile', locals: { user: @user } %>
  <%= render partial: 'shared/user_nav', locals: { user: @user } %>
  <div>
    <% if current_user == @user %>
      <a class="flex space-x-2 <%= card_class %> dark:hover:border-gray-700" href="<%= new_project_path %>">
        <%= image_tag "icons/add.svg", class: "icon w-6 h-6" %>
        <div class="font-bold"><%= I18n.t("projects.start") %></div>
      </a>
    <% end %>
    <%= turbo_frame_tag "projects", target: "_top" %>

    <%= turbo_frame_tag "projects_load_more", src: projects_path(format: :turbo_stream), loading: :lazy  %>

    <%= turbo_frame_tag "projects_loading" do %>
      <%= render partial: "posts/loading" %>
    <% end %>
  </div>
</div>
<% end %>
