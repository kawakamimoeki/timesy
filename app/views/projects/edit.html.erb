<% set_meta_tags(
  title: @project.title,
  og: {
    title: @project.title,
  }
) %>

<div class="mx-auto max-w-2xl w-full mt-4">
  <%= render partial: 'projects/form', locals: { project: @project, path: update_project_path(current_user.username, @project.codename), submit_label: I18n.t("form.submit.update"), method: :patch } %>
  <div class="flex">
    <%= button_to I18n.t("form.submit.delete"), project_path(current_user.username, @project.codename), data: { turbo_method: :delete, turbo_confirm: I18n.t("projects.confirm_delete") }, method: :delete, class: "text-red-500 mt-10 text-sm" %>
  </div>
</div>
