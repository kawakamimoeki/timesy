<%= turbo_frame_tag "wallpaper" do %>
  <div
    id="wallpaper-url"
    data-background-image="<%= !browser.device.mobile? && !browser.device.tablet? && current_user&.wallpaper_url %>"></div>
  <script>
    const url = document.querySelector('#wallpaper-url').dataset.backgroundImage
    if (localStorage.wallpaper !== url) {
      localStorage.wallpaper = url
      document.querySelector('body').style.backgroundImage = `url(${url})`
    }
  </script>
<% end %>
