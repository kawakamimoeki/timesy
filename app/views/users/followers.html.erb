<% set_meta_tags(
  title: I18n.t("pages.followers", user: @user.name),
  og: {
    title: I18n.t("pages.followers", user: @user.name),
  }
) %>

<div class="max-w-3xl mx-auto w-full">
  <%= render partial: "shared/profile", locals: { user: @user } %>
  <%= render partial: "shared/follow_nav", locals: { user: @user } %>
  <% if @followers.empty? %>
    <p class="w-full text-center py-20 font-bold"><%= I18n.t("followers.not_found") %></p>
  <% else %>
    <%= turbo_frame_tag :users do %>
    <% end %>

    <div class="h-4">
      <%= turbo_frame_tag "load_more", src: followers_path(username: @user.username, format: :turbo_stream), loading: :lazy %>
      <%= turbo_frame_tag "loading" do %>
      <%= render partial: "posts/loading" %>
      <div class="hidden sm:block">
        <%= render partial: "posts/loading" %>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
