<%= turbo_stream.replace "loading" do %>
<% end %>

<%= turbo_stream.append "users" do %>
  <div data-testid="following-list">
    <%= render partial: 'users/item', collection: @followees %>
  </div>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: following_path(username: @user.username, page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
