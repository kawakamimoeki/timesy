<% set_meta_tags(
  title: I18n.t("pages.following", user: @user.name),
  og: {
    title: I18n.t("pages.following", user: @user.name),
  }
) %>

<div class="grow max-w-[calc(100vw-2rem)] md:max-w-[calc(100%-256px-1rem)]">
  <%= render partial: "shared/profile", locals: { user: @user } %>
  <%= render partial: "shared/follow_nav", locals: { user: @user } %>
  <% if @followees.empty? %>
    <p class="w-full text-center py-20 font-bold"><%= I18n.t("following.not_found") %></p>
  <% else %>
    <%= turbo_frame_tag :users do %>
      <%= render partial: 'users/item', collection: @followees %>
    <% end %>

    <%= turbo_frame_tag "load_more", src: following_path(username: @user.username, format: :turbo_stream, page: 1), loading: :lazy %>
  <% end %>
</div>
