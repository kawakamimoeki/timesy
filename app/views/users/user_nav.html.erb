<%= turbo_frame_tag :user_nav do %>
<nav class="<%= nav_class %> mb-4 top-0">
  <div class="<%= nav_list_class %> space-x-5" role="tablist" data-controller="nav">
    <a
      href="<%= user_path(@user.username) %>"
      class="<%= nav_item_class(user_path(@user.username)) %>"
      data-turbo-frame="_top"
      data-testid="view-posts"
      role="tab"
      data-nav-target="item"
      data-current="<%= user_path(@user.username) %>"
      aria-controls="posts"
    >
      <%= I18n.t("pages.posts") %>
    </a>
    <a
      href="<%= user_comments_path(@user.username) %>"
      class="<%=  nav_item_class(user_comments_path(@user.username)) %>"
      data-turbo-frame="_top"
      data-testid="view-comments"
      role="tab"
      data-nav-target="item"
      data-current="<%= user_comments_path(@user.username) %>"
      aria-controls="comments"
    >
        <%= I18n.t("users.comments", user: @user.name) %>
    </a>
    <a
      href="<%= projects_path(@user.username) %>"
      class="<%= nav_item_class(projects_path(@user.username)) %>"
      data-turbo-frame="_top"
      role="tab"
      data-nav-target="item"
      data-current="<%= projects_path(@user.username) %>"
      aria-controls="projects"
      data-testid="view-projects"
    >
      <%= I18n.t("users.projects", user: @user.name) %>
    </a>
    <a
      href="<%= images_path(@user.username) %>"
      class="<%= nav_item_class(images_path(@user.username)) %>"
      data-turbo-frame="_top"
      role="tab"
      data-nav-target="item"
      data-current="<%= images_path(@user.username) %>"
      aria-controls="images"
      data-testid="view-images"
    >
      <%= I18n.t("users.images", user: @user.name) %>
    </a>
  </div>
</nav>
<% end %>
