<%= turbo_stream.append "posts" do %>
  <%= render partial: 'posts/item', collection: @posts, cached: true %>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: user_path(username: @user.username, page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
