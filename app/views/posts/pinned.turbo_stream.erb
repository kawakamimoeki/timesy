<%= turbo_stream.append "pinned" do %>
  <% if @posts.present? %>
    <%= render @posts %>
  <% else %>
    <div class="<%= card_class %>">
      <div class="text-gray-400 text-center">
        <%= I18n.t("pinned.empty") %>
      </div>
      <div class="text-gray-400 text-center">
        <%= I18n.t("pinned.empty2") %>
      </div>
    </div>
  <% end %>
<% end %>

<% if @next_page.present? && !params[:limit].present? %>
  <%= turbo_stream.replace "pinned_load_more" do %>
    <%= turbo_frame_tag "pinned_load_more", src: pinned_path(format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "pinned_loading" do %>
  <% end %>
<% end %>
