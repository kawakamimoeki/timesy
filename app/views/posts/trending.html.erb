<div class="flex grow relative ">
  <div class="grow w-full" id="main">
    <%= turbo_frame_tag "timeline" do %>
    <%= render partial: "shared/timeline_nav" %>
    <div class="max-w-4xl mx-auto px-4">
      <% if current_user %>
      <div class="flex w-full <%= card_class %> space-x-3">
        <div class="transition-all">
          <%= link_to user_path(username: current_user.username), class: "w-8 flex items-center space-x-1 hover:underline mt-1" do %>
            <%= image_tag current_user.avatar_icon, alt: current_user.username, class: "w-8 h-8 object-cover rounded-full" %>
          <% end %>
        </div>
        <%= render partial: "posts/form", locals: { post: @post, page: @page } %>
      </div>
      <% end %>
      <%= turbo_stream_from "trending" %>
      <%= turbo_frame_tag "trending", target: "_top" do %>
      <% end %>

      <div class="h-1">
        <%= turbo_frame_tag "trending_load_more", src: trending_path(format: :turbo_stream), loading: :lazy  %>
        <%= turbo_frame_tag "trending_loading" do %>
          <%= render partial: "posts/loading" %>
          <div class="hidden sm:block">
            <%= render partial: "posts/loading" %>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="grow w-1/2 hidden border-l overflow-visible sm:h-[calc(100vh-55px)] sm:overflow-scroll dark:border-l-dark-border" id="sidebar-container">
    <%= turbo_frame_tag "sidebar" %>
  </div>
</div>
