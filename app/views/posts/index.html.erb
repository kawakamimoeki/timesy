<div class="grow">
  <div class="flex items-center">
    <h1 class="font-bold text-3xl">Latest</h1>
  </div>
  <div class="py-5">
    <% if current_user %>
    <div class="flex w-full bg-white p-5 text-gray-700 shadow-sm rounded-lg mb-5">
      <div class="transition-all">
        <%= link_to user_path(username: current_user.username), class: "w-10 flex items-center space-x-1 hover:underline mt-1" do %>
          <%= image_tag current_user.avatar_icon, alt: current_user.username, width: "50px", height: "50px", class: "w-10 h-10 object-cover rounded-full" %>
        <% end %>
      </div>
      <%= render partial: "posts/form", locals: { post: @post, page: @page } %>
    </div>
    <% end %>
    <% if @posts.empty? %>
      <p class="w-full text-center py-16 font-bold"><%= I18n.t("posts.not_found") %></p>
    <% end %>
    <%= turbo_frame_tag "loading" do %>
      <%= render partial: "posts/loading" %>
      <div class="hidden sm:block">
      <%= render partial: "posts/loading" %>
    </div>
    <% end %>

    <%= turbo_frame_tag :posts do %>
    <% end %>

    <%= turbo_frame_tag "load_more", src: root_path(dev: params[:dev], format: :turbo_stream), loading: :lazy  %>
  </div>
</div>
