<div class="flex w-full grow relative ">
  <div class="grow w-full" id="main">
    <%= turbo_frame_tag "timeline" do %>
    <div id="nav-container" class="top-0 sticky z-[50]" data-turbo-permanent>
      <div class="<%= nav_class %>">
        <%= turbo_frame_tag "timeline_nav_for_current_user", src: users_timeline_nav_path(current: request.path), class: nav_list_class %>
      </div>
    </div>
    <div class="max-w-3xl mx-auto px-4">
      <%= turbo_frame_tag "pinned", target: "_top" do %>
      <% end %>

      <div class="h-1">
        <%= turbo_frame_tag "pinned_load_more", src: pinned_path(format: :turbo_stream), loading: :lazy  %>
        <%= turbo_frame_tag "pinned_loading" do %>
          <%= render partial: "posts/loading" %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
