<% if post.pinned_by?(current_user) %>
  <%= button_to delete_pin_path(post.id, Pin.find_by(user: current_user, post: post)), class: "#{block_link_class}", method: :delete do %>
    <%= image_tag "icons/pin.svg", width: "24px", height: "24px", class: "icon" %>
    <span class="text-sm"><%= I18n.t("posts.unpin") %></span>
  <% end %>
<% else %>
  <%= button_to create_pin_path(post_id: post.id), method: :post, class: "#{primary_button_class}" do %>
    <%= image_tag "icons/pin.svg", width: "24px", height: "24px", class: "icon" %>
    <span class="text-sm"><%= I18n.t("posts.pin") %></span>
  <% end %>
<% end %>
