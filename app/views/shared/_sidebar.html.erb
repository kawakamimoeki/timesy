<div class="relative hidden <%= should_render_sidebar? ? "md:block" : "md:hidden" %>">
  <div class="h-[54px]">
  </div>
  <div class="sticky text-sm top-3 bg-white shadow-sm rounded-lg w-64 p-5">
    <ul class="mb-5 flex flex-col space-y-2">
      <li>
        <%= link_to "Latest", root_path, class: " hover:underline" %>
      </li>
      <% if current_user %>
      <li>
        <%= link_to "Projects", projects_path(current_user.username), class: " hover:underline" %>
      </li>
      <li>
        <%= link_to "Setting", settings_path, class: " hover:underline" %>
      </li>
      <% end %>
      <li>
        <%= link_to "Documentation", docs_path, class: " hover:underline" %>
      </li>
      <li>
        <%= link_to "About", about_path, class: " hover:underline" %>
      </li>
      <li>
        <%= link_to "Terms", terms_path, class: " hover:underline" %>
      </li>
      <li>
        <%= link_to "Privacy", privacy_path, class: " hover:underline" %>
      </li>
      <li>
        <%= link_to "https://forms.gle/7FZz2iHzYLQYiom7A", class: " hover:underline", target: "_blank" do %>
          <span>Emoji Request</span>
          <%= image_tag "icons/newtab.svg", class: "inline-block h-3 w-3 pb-[1px] ml-[1px]" %>
        <% end %>
      </li>
      <li>
        <%= link_to "https://github.com/moekidev/timesy", class: " hover:underline", target: "_blank" do %>
          <span>GitHub</span>
          <%= image_tag "icons/newtab.svg", class: "inline-block h-3 w-3 pb-[1px] ml-[1px]" %>
        <% end %>
      </li>
      <li>
        <%= link_to "https://status.timesy.dev/", class: " hover:underline", target: "_blank" do %>
          <span>Status</span>
          <%= image_tag "icons/newtab.svg", class: "inline-block h-3 w-3 pb-[1px] ml-[1px]" %>
        <% end %>
      </li>
      <li>
        <%= link_to "https://www.buymeacoffee.com/moekidev", class: " hover:underline", target: "_blank" do %>
          <span>Buy me a coffee</span>
          <%= image_tag "icons/newtab.svg", class: "inline-block h-3 w-3 pb-[1px] ml-[1px]" %>
        <% end %>
      </li>
    </ul>
    <div>
      <p class="text-right text-gray-500 font-normal text-xs">
        &copy; 2023 Timesy
      </p>
    </div>
  </div>
</div>
